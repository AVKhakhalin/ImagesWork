<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialog_fragment_cancel_file_save_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/dialog_fragment_cancel_file_save_title_text"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_fragment_cancel_file_save_title_text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/way_input_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/way_input_button_cancel_text"
        android:textAllCaps="true" />
</LinearLayout>